{
  "name": "authboilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "kill-port 3000 && npm run services:up && npm run next && npm run services:stop",
    "next": "next dev",
    "services:up": "docker-compose -f docker-compose.development.yml up -d",
    "services:stop": "docker-compose -f docker-compose.development.yml stop",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --runInBand --watchAll",
    "test:watch:services": "kill-port 3000 && npm run services:up && concurrently -s -k -n next,jest \"npm run next\" \"jest --runInBand --watchAll\" && npm run services:stop"
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "async-retry": "^1.3.3",
    "bcrypt": "^5.1.0",
    "cross-fetch": "^3.1.5",
    "cookie": "0.5.0",
    "eslint": "8.28.0",
    "eslint-config-next": "13.0.5",
    "jsonwebtoken": "^8.5.1",
    "joi": "17.6.3",
    "next": "13.0.5",
    "next-connect": "^0.13.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.9.3",
    "uuid": "9.0.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.5",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/uuid": "^9.0.0",
    "concurrently": "^7.6.0",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "kill-port": "^2.0.1",
    "prisma": "^4.6.1",
    "ts-jest": "^29.0.3"
  }
}
